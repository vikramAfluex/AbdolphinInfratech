<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Branch Name"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:textSize="12dp"

                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Branch Name"
                    android:gravity="start"
                    android:textSize="12dp"

                    android:textColor="@color/black"
                    android:id="@+id/tv_branch_name"
                    android:layout_weight="1"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="1dp"
                android:background="@color/dot_dark_screen1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Booking Number"
                    android:padding="2dp"
                    android:textSize="12dp"

                    android:gravity="start"

                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Booking Number"
                    android:padding="2dp"
                    android:textSize="12dp"

                    android:textColor="@color/black"
                    android:id="@+id/tv_booking_number"
                    android:layout_weight="1"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="1dp"
                android:background="@color/dot_dark_screen1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Affiliate Info"
                    android:textSize="12dp"


                    android:gravity="start"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Affiliate Info"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:textSize="12dp"

                    android:id="@+id/tv_affiliate_info"
                    android:layout_weight="1"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="1dp"
                android:background="@color/dot_dark_screen1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer Info"
                    android:textStyle="bold"
                    android:textSize="12dp"

                    android:gravity="start"

                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customer Info"
                    android:gravity="start"
                    android:textSize="12dp"

                    android:textColor="@color/black"
                    android:id="@+id/tv_customer_info"
                    android:layout_weight="1"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="1dp"
                android:background="@color/dot_dark_screen1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plot"
                    android:textSize="12dp"

                    android:padding="2dp"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:id="@+id/tv_plot"
                    android:textSize="12dp"

                    android:gravity="start"
                    android:textColor="@color/black"

                    android:layout_weight="1"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="1dp"
                android:background="@color/dot_dark_screen1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Actual Plot Amount"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textSize="12dp"

                    android:textStyle="bold"
                    android:gravity="start"
                    android:textColor="@color/colorPrimary"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Actual Plot Amount"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textSize="12dp"

                    android:textColor="@color/black"
                    android:gravity="start"
                    android:id="@+id/tv_actual_plot_amount"

                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="1dp"
                android:background="@color/dot_dark_screen1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Net Plot Amount"
                    android:layout_weight="1"
                    android:textSize="12dp"

                    android:gravity="start"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Net Plot Amount"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textSize="12dp"

                    android:textColor="@color/black"
                    android:id="@+id/tv_net_Plot_amount"
                    android:gravity="start"

                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="1dp"
                android:background="@color/dot_dark_screen1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Balance Amount"
                android:layout_weight="1"
                android:padding="2dp"
                android:textSize="12dp"

                android:gravity="start"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Balance Amount"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textSize="12dp"

                    android:gravity="start"
                    android:id="@+id/tv_balance_amount"
                    android:textColor="@color/black"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="1dp"
                android:background="@color/dot_dark_screen1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Date"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textSize="12dp"

                    android:textColor="@color/colorPrimary"
                    android:gravity="start"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Date"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:textSize="12dp"

                    android:gravity="start"
                    android:textColor="@color/black"

                    android:id="@+id/tv_payment_date"
                    />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
